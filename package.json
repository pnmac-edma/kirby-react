{
  "name": "kirby",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.4.1",
    "@material-ui/icons": "^4.4.3",
    "@material-ui/lab": "^4.0.0-alpha.27",
    "@projectstorm/react-diagrams": "^5.3.2",
    "closest": "0.0.1",
    "dagre": "^0.8.5",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "pathfinding": "^0.4.18",
    "paths-js": "^0.4.10",
    "prettier": "^1.18.2",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.1.1",
    "react-select": "^3.0.8",
    "react-window": "^1.8.5",
    "redux-saga": "^1.0.5",
    "reselect": "^4.0.0",
    "storm-react-diagrams": "^5.2.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "tokens": "rm -rf package-lock.json && npm i @edma/design-tokens --save-dev",
    "release": "release-it"
  },
  "eslintConfig": {
    "extends": "react-app",
    "rules": {
      "no-console": "warn"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@edma/blocks": "^0.1.3",
    "@edma/design-tokens": "^4.0.0",
    "axios": "^0.19.0",
    "bestzip": "^2.1.5",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "react-redux": "^7.1.1",
    "redux": "^4.0.4",
    "redux-mock-store": "^1.5.3",
    "release-it": "^12.4.3",
    "rimraf": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!@edma/(design-tokens|blocks))"
    ]
  }
}
